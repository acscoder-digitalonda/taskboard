{
  "expo": {
    "name": "TaskBoard",
    "slug": "taskboard",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "taskboard",
    "platforms": ["ios", "android"],
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#00BCD4"
    },
    "ios": {
      "bundleIdentifier": "com.taskboard.app",
      "supportsTablet": true,
      "infoPlist": {
        "NSFaceIDUsageDescription": "Use Face ID to unlock TaskBoard"
      }
    },
    "android": {
      "package": "com.taskboard.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#00BCD4"
      }
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-font"
    ]
  }
}
